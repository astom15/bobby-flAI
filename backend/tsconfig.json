{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2022",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"rootDir": ".",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"typeRoots": ["types", "node_modules/@types"],
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "./*"]
		},
		"moduleResolution": "node"
	},
	"include": [
		"*.ts",
		"routes/**/*.ts",
		"controllers/**/*.ts",
		"models/**/*.ts",
		"db.ts",
		"scripts/**/*.ts",
		"migrations/**/*.ts",
		"seeders/**/*.ts",
		"config/**/*",
		"graphql/**/*.ts",
		"**/*.graphql"
	],
	"exclude": ["node_modules", "dist"]
}


