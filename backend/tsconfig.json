{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2022",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"rootDir": ".",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"typeRoots": ["types", "node_modules/@types"],
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "./*"]
		},
		"moduleResolution": "node"
	},
	"include": [
		"**/*.ts",
		"src/**/*.ts",
		"db.ts",
		"src/graphql/**/*.ts",
		"src/**/*.graphql",
		"scripts/**/*.ts"
	],
	"exclude": ["node_modules", "dist"]
}


