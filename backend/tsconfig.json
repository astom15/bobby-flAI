{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"types": ["node", "express"]
	},
	"include": ["src", "types"],
	"exclude": ["node_modules", "dist"]
}
